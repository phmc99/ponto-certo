generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sector {
  id       String     @id @default(uuid())
  name     String     @unique
  Employee Employee[]

  @@map("sectors")
}

model Employee {
  id       String    @id @default(uuid())
  isAdmin  Boolean   @default(false)
  name     String
  cpf      String    @unique
  password String
  sector   Sector    @relation(fields: [sectorId], references: [id])
  sectorId String
  ClockIn  ClockIn[]

  @@map("employees")
}

model ClockIn {
  id            String      @id @default(uuid())
  date          DateTime    @default(now())
  updateDate    DateTime    @updatedAt
  updateMessage String      @default("")
  type          ClockInType
  employee      Employee    @relation(fields: [employeeId], references: [id])
  employeeId    String

  @@map("clockins")
}

enum ClockInType {
  entrada
  saida
}
